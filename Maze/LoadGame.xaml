<Window x:Class="Maze.LoadGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze"
        mc:Ignorable="d"
        Title="LoadGame" Height="450" Width="800">
    <Grid>
        <Button Content="Game 1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Margin="100,0,0,0" Height="150" Click="Game1"/>
        <Button Content="Game 2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Margin="0,0,0,0" Height="150" Click="Game2"/>
        <Button Content="Game 3" HorizontalAlignment="Right" VerticalAlignment="Center" Width="150" Margin="0,0,100,0" Height="150" Click="Game3"/>
        <Button Content="Home" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="666,366,0,0" Click="Home_Click"/>
    </Grid>
</Window>
