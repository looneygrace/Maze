<Window x:Class="Maze.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maze"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Button Content="Home" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="666,367,0,0" Click="Home_Click"/>
        <ListBox HorizontalAlignment="Left" Height="105" Margin="61,54,0,0" VerticalAlignment="Top" Width="177">
            <CheckBox Content="Creepy Dungeon" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="Bush" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="Stone" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="Brick" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ListBox>
        <ListBox HorizontalAlignment="Left" Height="124" Margin="68,177,0,0" VerticalAlignment="Top" Width="170">
            <CheckBox Content="Creepy Music" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="Happy Music" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="Garden Music" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CheckBox Content="No music" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ListBox>
        <TextBox HorizontalAlignment="Left" Height="55" Margin="414,104,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="116" Name="Red" MaxLength="3"/>
        <TextBox HorizontalAlignment="Left" Height="55" Margin="548,104,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="116" Name="Green" MaxLength="3"/>
        <TextBox HorizontalAlignment="Left" Height="55" Margin="684,104,-6.4,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="116" Name="Blue" MaxLength="3"/>
        <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Margin="445,177,0,0"/>
        <Rectangle Fill="#FFF4F4F5" Name ="ColorBox"  HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
